# SIGMA Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL configuration (used by docker-compose)
POSTGRES_USER=sigma
POSTGRES_PASSWORD=sigma
POSTGRES_DB=sigma

# Database connection string
# For local development with SQLite:
DATABASE_URL=sqlite:///./openmemory.db
# For local development with PostgreSQL (docker-compose):
# DATABASE_URL=postgresql://sigma:sigma@localhost:5432/sigma
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# Vector Store Configuration (Qdrant)
# =============================================================================
QDRANT_URL=http://localhost:6333
# For production:
# QDRANT_URL=http://your-qdrant-instance:6333

# =============================================================================
# Knowledge Graph Configuration (Neo4j + Graphiti)
# =============================================================================
# For production with Neo4j Aura:
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_AUTH=neo4j/your-secure-password-here

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Set to "openai", "openrouter", or "ollama" for local LLM
LLM_PROVIDER=openrouter

# --- OpenRouter Configuration (recommended) ---
# Get your API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# --- OpenAI Direct Configuration (only if LLM_PROVIDER=openai) ---
# OPENAI_API_KEY=sk-your-openai-key-here

# Model to use (format depends on provider)
# OpenRouter examples:
#   - xiaomi/mimo-v2-flash:free     (free, fast)
#   - anthropic/claude-3.5-sonnet   (excellent for code)
#   - anthropic/claude-3-haiku      (fast, cheap)
#   - openai/gpt-4o-mini            (balanced)
#   - openai/gpt-4o                 (powerful)
#   - google/gemini-pro-1.5         (long context)
#   - meta-llama/llama-3.1-70b-instruct (open source)
# OpenAI examples: gpt-4o-mini, gpt-4o
# Ollama examples: llama3, mistral, codellama
MODEL=xiaomi/mimo-v2-flash:free

# --- Ollama Configuration (only if LLM_PROVIDER=ollama) ---
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Embeddings Configuration
# =============================================================================
# Provider for embeddings (openai, openrouter, or ollama)
# Note: For OpenRouter, use openai/ prefix for embedding models
EMBEDDINGS_PROVIDER=openrouter
EMBEDDINGS_MODEL=openai/text-embedding-3-small

# =============================================================================
# User Configuration
# =============================================================================
USER_ID=default-user
DEFAULT_APP_ID=default-app

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=local
PORT=8000
BIND_PUBLIC_HOST=True
LOG_LEVEL=INFO
JSON_LOGGING_ENABLED=False
DISABLE_HEALTH_CHECK_ACCESS_LOGS=False

# =============================================================================
# SIGMA Feature Flags
# =============================================================================
# Enable features incrementally as they become ready

# Phase 1: Knowledge Graph (Graphiti + Neo4j)
GRAPHITI_ENABLED=true

# Phase 2: Git Integration
GIT_INTEGRATION_ENABLED=false

# Phase 3: Intelligence Features
PATTERN_LEARNING_ENABLED=false
RESEARCH_ENGINE_ENABLED=false
CROSS_PROJECT_ENABLED=false

# =============================================================================
# Optional Integrations
# =============================================================================
# Slack Integration
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_APP_TOKEN=xapp-your-app-token

# AWS Secrets Manager (for AWS deployments)
# AWS_REGION=us-east-1
# AWS_DEFAULT_REGION=us-east-1
# DB_SECRET_NAME=prod/openmemory/db

# Datadog (optional monitoring)
DD_TRACE_ENABLED=False
DD_ENV=local
DD_VERSION=0.0.0
